{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug niterc with LLDB (Windows w/ MSYS2)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/niterc.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\lldb-mi.exe",
            "preLaunchTask": "make main executable",
        },
        {
            "name": "Debug niterc with GDB (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/niterc",
            "args": [
                "sandbox/src/main.nit",
                "-o",
                "sandbox/bin/main"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "make main executable",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug niterc with GDB (Windows w/ MSYS2)",
